
@model OrderViewModel


<h2>Your orders</h2>
<h4>Here is an overview of your orders.</h4>

<table class="table">
    <thead>
        <tr class="columnHeader">
            <th>ID</th>
            <th>DATE</th>
            <th>TOTAL</th>
            <th>PAID?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Orders)
        {
        <tr>
            <td>@line.Id</td>
            <td>@line.OrderPlaced.ToShortDateString()</td>
            <td class="bold">$@line.OrderTotal</td>
            <td class="bold">@line.OrderPaid</td>
            <td>
                <a class="btn-primary" type="button" asp-action="Detail" asp-route-basketId="@line.BasketId">DETAILS</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="mt-2 flex-left">
    <a asp-controller="ShoppingBasket" asp-action="Index">
        <img class="backIcon" src="~/img/arrow-down.svg" /> Back to shopping basket
    </a>
</div>